<%%= form_for([:admin, @<%= @singular %>], :html => { :multipart => true, :class => "validatable_form", :'data-bv-message' => "This value is not valid", :'data-bv-feedbackicons-valid' => "glyphicon glyphicon-ok", :'data-bv-feedbackicons-invalid' => "glyphicon glyphicon-remove", :'data-bv-feedbackicons-validating' => "glyphicon glyphicon-refresh" }) do |f| %>
  <div class="row">
  	<div class="col-sm-6">
  		<div class="the-box">
        <% @keys.each do |key| %>
          <div class="form-group">
            <label><%= key.camelcase %>:</label>
            <%%= f.text_field :<%= key %>, :class => "form-control", :required => 'required', :'data-bv-notempty-message' => "<%= key %> is required" %>
          </div>
        <% end %>
	  
			  <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
  		</div><!-- /.the-box -->
    </div>
  
  	<div class="col-sm-6">
  		<div class="the-box">
  		  Other fields here?
  		</div><!-- /.the-box -->
    </div>
  </div>
<%% end %>