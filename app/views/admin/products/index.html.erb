<!-- Begin page heading -->
<h1 class="page-heading">Types de cours</h1>
<!-- End page heading -->

<!-- Begin breadcrumb -->
<ol class="breadcrumb default square rsaquo sm">
	<li><a href="/admin"><i class="fa fa-home"></i></a></li>
	<li class="active">Types de cours</li>
</ol>
<!-- End breadcrumb -->

<a class="btn btn-info btn-perspective" href="<%= new_admin_product_path %>"><i class="fa fa-plus"></i> Nouveau type de cours</a>

<!-- Begin static table -->
<h4 class="small-title" style="margin-top: 30px">TYPES DE COURS</h4>

<div class="the-box">
	<div class="table-responsive">
		<table class="table table-striped table-hover datatable" id="products-datatable">
			<thead class="the-box dark full">
				<tr>
          <th style="width:200px">Actions</th>
          <th style="width:50px">ID</th>
          <th style="width:200px">Nom</th>
          <th style="width:200px">Prix</th>
          <th style="width:200px">Package</th>
                  </tr>
			</thead>
			<tbody id="products_data">
        <% @products.each do |product| %>
          <tr id="products_<%= product.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_product_path(product) %>"><i class="fa fa-pencil"></i> Modifier</a>
              <a class="btn btn-danger delete-record" data-id="<%= product.id %>" data-type="products"><i class="fa fa-trash-o"></i> Supprimer</a>
            </td>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.package? ? "Oui" : "Non" %></td>
            
          </tr>
        <% end %>
			</tbody>
		</table>
	</div><!-- /.table-responsive -->
</div><!-- /.the-box -->
<!-- End static table -->