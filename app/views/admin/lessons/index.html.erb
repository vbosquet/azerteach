<!-- Begin page heading -->
<h1 class="page-heading">Réservations</h1>
<!-- End page heading -->

<!-- Begin breadcrumb -->
<ol class="breadcrumb default square rsaquo sm">
	<li><a href="/admin"><i class="fa fa-home"></i></a></li>
	<li class="active">Réservations</li>
</ol>
<!-- End breadcrumb -->

<a class="btn btn-info btn-perspective" href="<%= new_admin_lesson_path %>"><i class="fa fa-plus"></i> Nouvelle réservation</a>

<!-- Begin static table -->
<h4 class="small-title" style="margin-top: 30px">RESERVATIONS</h4>

<div class="the-box">
	<div class="table-responsive">
		<table class="table table-striped table-hover datatable" id="lessons-datatable">
			<thead class="the-box dark full">
				<tr>
          <th style="width:200px">Actions</th>
          <th style="width:50px">ID</th>
          <th>Début du cours</th>
          <th>Fin du cours</th>
          <th>Type de cours</th>
          <th>Professeur</th>
          <th>Elève(s)</th>
                  </tr>
			</thead>
			<tbody id="lessons_data">
        <% @lessons.each do |lesson| %>
          <tr id="lessons_<%= lesson.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_lesson_path(lesson) %>"><i class="fa fa-pencil"></i> Modifier</a>
              <% if lesson.invoices.empty? %>
                <a class="btn btn-danger delete-record" data-id="<%= lesson.id %>" data-type="lessons"><i class="fa fa-trash-o"></i> Supprimer</a>
              <% end %>
            </td>
            <td><%= lesson.id %></td>
            <td><%= lesson.start_date.strftime("%d/%m/%Y %H:%M") if lesson.start_date.present? %></td>
            <td><%= lesson.end_date.strftime("%d/%m/%Y %H:%M") if lesson.end_date.present? %></td>
            <td><%= lesson.product.name if lesson.product.present? %></td>
            <td><%= lesson.teacher.name if lesson.teacher.present? %></td>
            <td><%= lesson.students_name.join(', ') if lesson.students.present? %></td>
            
          </tr>
        <% end %>
			</tbody>
		</table>
	</div><!-- /.table-responsive -->
</div><!-- /.the-box -->
<!-- End static table -->