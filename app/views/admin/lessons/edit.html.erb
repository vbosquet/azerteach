<%= render :partial => 'form' %>

<h4 class="small-title" style="margin-top: 30px">FACTURES ASSIGNEES</h4>

<div class="the-box">
	<div class="table-responsive">
		<table class="table table-striped table-hover datatable" id="lessons-datatable">
			<thead class="the-box dark full">
				<tr>
          <th style="width:200px">Actions</th>
          <th>Numéro</th>
          <th>Destinataire</th>
          <th>Date d'envoi</th>
          <th>Date du payement</th>
                  </tr>
			</thead>
			<tbody id="invoices_data">
        <% @lesson.invoices.distinct.each do |invoice| %>
          <tr id="invoice_<%= invoice.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_invoice_path(invoice) %>"><i class="fa fa-pencil"></i> Ouvrir la facture</a>
            </td>
            <td><%= invoice.numero %></td>
            <td><%= invoice.student.name if invoice.student.present? %></td>
            <td><%= invoice.sending_date.nil? ? "Non encore envoyée" : "Envoyée le #{invoice.sending_date.strftime('%d/%m/%Y')}" %></td>
            <td><%= invoice.payment_date.nil? ? "Non encore payée" : "Payée le #{invoice.sending_date.strftime('%d/%m/%Y')}" %></td>
          </tr>
        <% end %>
			</tbody>
		</table>
	</div><!-- /.table-responsive -->
</div><!-- /.the-box -->
<!-- End static table -->

<h4 class="small-title" style="margin-top: 30px">NOTE DE FRAIS ASSIGNEE</h4>

<div class="the-box">
  <div class="table-responsive">
    <table class="table table-striped table-hover datatable" id="lessons-datatable">
      <thead class="the-box dark full">
        <tr>
          <th style="width:200px">Actions</th>
          <th>Numéro</th>
          <th>Destinataire</th>
          <th>Date d'envoi</th>
                  </tr>
      </thead>
      <tbody id="expense_exports_data">
        <% ExpenseExport.joins(:lessons).where("lessons.id = ?", @lesson.id).distinct.each do |expense_export| %>
          <tr id="expense_export_<%= expense_export.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_expense_export_path(expense_export) %>"><i class="fa fa-pencil"></i> Ouvrir la note de frais</a>
            </td>
            <td><%= expense_export.numero %></td>
            <td><%= expense_export.teacher.name if expense_export.teacher.present? %></td>
            <td><%= expense_export.sending_date.nil? ? "Non encore envoyée" : "Envoyée le #{expense_export.sending_date.strftime('%d/%m/%Y')}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!-- /.table-responsive -->
</div><!-- /.the-box -->
<!-- End static table -->