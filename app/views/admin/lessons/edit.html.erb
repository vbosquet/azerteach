<%= render :partial => 'form' %>

<h4 class="small-title" style="margin-top: 30px">FACTURES ASSIGNEES</h4>

<div class="the-box">
	<div class="table-responsive">
		<table class="table table-striped table-hover datatable" id="lessons-datatable">
			<thead class="the-box dark full">
				<tr>
          <th style="width:200px">Actions</th>
          <th>Numéro</th>
          <th>Destinataire</th>
          <th>Date d'envoi</th>
          <th>Date du payement</th>
                  </tr>
			</thead>
			<tbody id="invoices_data">
        <% @lesson.invoices.distinct.each do |invoice| %>
          <tr id="invoice_<%= invoice.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_invoice_path(invoice) %>"><i class="fa fa-pencil"></i> Ouvrir la facture</a>
            </td>
            <td><%= invoice.numero %></td>
            <td><%= invoice.student.name if invoice.student.present? %></td>
            <td><%= invoice.sending_date.nil? ? "Non encore envoyée" : "Envoyée le #{invoice.sending_date.strftime('%d/%m/%Y')}" %></td>
            <td><%= invoice.payment_date.nil? ? "Non encore payée" : "Payée le #{invoice.sending_date.strftime('%d/%m/%Y')}" %></td>
          </tr>
        <% end %>
			</tbody>
		</table>
	</div><!-- /.table-responsive -->
</div><!-- /.the-box -->
<!-- End static table -->