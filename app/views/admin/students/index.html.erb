<h1 class="page-heading">ELEVES</h1>

<ol class="breadcrumb default square rsaquo sm">
	<li><a href="/admin"><i class="fa fa-home"></i></a></li>
	<li class="active">Elèves</li>
</ol>

<!--<a class="btn btn-info btn-perspective" href="<%= new_admin_student_path %>"><i class="fa fa-plus"></i> Nouvel élève</a>-->

<h4 class="small-title" style="margin-top: 30px">NOUVEAUX ELEVES</h4>

<%= form_tag import_admin_students_path, multipart: true do %>
  <div class="row">
    <div class="col-sm-6">
      <div class="the-box">
        <div class="form-group">
          <label>Importer des élèves à partir d'un fichier Excel</label>
          <%= file_field_tag :file, class: "form-control" %>
        </div>
        <%= submit_tag "Enregistrer", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
<% end %>

<h4 class="small-title" style="margin-top: 30px">ELEVES</h4>

<div class="the-box">
	<div class="table-responsive">
		<table class="table table-striped table-hover datatable" id="students-datatable">
			<thead class="the-box dark full">
				<tr>
          <th style="width:70px">Actions</th>
          <th>Code</th>
          <th>Prénom</th>
          <th>Nom</th>
          <th>Email</th>
                  </tr>
			</thead>
			<tbody id="students_data">
        <% @students.each do |student| %>
          <tr id="students_<%= student.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_student_path(student) %>"><i class="fa fa-pencil"></i></a>
              <a class="btn btn-danger delete-record" data-id="<%= student.id %>" data-type="students"><i class="fa fa-trash-o"></i></a>
            </td>
            <td><%= student.code %></td>
            <td><%= student.firstname %></td>
            <td><%= student.lastname %></td>
            <td><%= student.email %></td>
          </tr>
        <% end %>
			</tbody>
		</table>
	</div>
</div>
