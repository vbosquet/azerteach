<!-- Begin page heading -->
<h1 class="page-heading">ELEVES</h1>
<!-- End page heading -->

<!-- Begin breadcrumb -->
<ol class="breadcrumb default square rsaquo sm">
	<li><a href="/admin"><i class="fa fa-home"></i></a></li>
	<li class="active">Elèves</li>
</ol>
<!-- End breadcrumb -->

<a class="btn btn-info btn-perspective" href="<%= new_admin_student_path %>"><i class="fa fa-plus"></i> Nouvel élève</a>

<!-- Begin static table -->
<h4 class="small-title" style="margin-top: 30px">ELEVES</h4>

<div class="the-box">
	<div class="table-responsive">
		<table class="table table-striped table-hover datatable" id="students-datatable">
			<thead class="the-box dark full">
				<tr>
          <th style="width:200px">Actions</th>
          <th style="width:50px">ID</th>
          <th>Prénom</th>
          <th>Nom</th>
          <th>Email</th>
          <th>Téléphone</th>
          <th>Adresse ligne 1</th>
          <th>Adresse ligne 2</th>
                  </tr>
			</thead>
			<tbody id="students_data">
        <% @students.each do |student| %>
          <tr id="students_<%= student.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_student_path(student) %>"><i class="fa fa-pencil"></i> Modifier</a>
              <a class="btn btn-danger delete-record" data-id="<%= student.id %>" data-type="students"><i class="fa fa-trash-o"></i> Supprimer</a>
            </td>
            <td><%= student.id %></td>
            <td><%= student.firstname %></td>
            <td><%= student.lastname %></td>
            <td><%= student.email %></td>
            <td><%= student.phone_number %></td>
            <td><%= student.address_line_1 %></td>
            <td><%= student.address_line_2 %></td>
            
          </tr>
        <% end %>
			</tbody>
		</table>
	</div><!-- /.table-responsive -->
</div><!-- /.the-box -->
<!-- End static table -->