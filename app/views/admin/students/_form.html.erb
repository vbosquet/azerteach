<%= form_for([:admin, @student], :html => { :multipart => true, :class => "validatable_form", :'data-bv-message' => "This value is not valid", :'data-bv-feedbackicons-valid' => "glyphicon glyphicon-ok", :'data-bv-feedbackicons-invalid' => "glyphicon glyphicon-remove", :'data-bv-feedbackicons-validating' => "glyphicon glyphicon-refresh" }) do |f| %>
  <div class="row">
  	<div class="col-sm-6">
  		<div class="the-box">

        <div class="form-group">
          <label>Prénom :</label>
          <%= f.text_field :firstname, :class => "form-control" %>
        </div>

        <div class="form-group">
          <label>Nom :</label>
          <%= f.text_field :lastname, :class => "form-control" %>
        </div>

        <div class="form-group">
          <label>Date de naissance :</label>
          <%= f.date_field :birthdate, :class => "form-control" %>
        </div>

        <div class="form-group">
          <label>Email :</label>
          <%= f.email_field :email, :class => "form-control" %>
        </div>

        <div class="form-group">
          <label>Téléphone :</label>
          <%= f.text_field :phone_number, :class => "form-control" %>
        </div>

        <div class="form-group">
          <label>Téléphone mobile :</label>
          <%= f.text_field :mobile, :class => "form-control" %>
        </div>
        
  		</div>
      <div class="the-box">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Enregistrer</button>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="the-box">
        <div class="form-group">
          <label>Nom du parent :</label>
          <%= f.text_field :parent_lastname, :class => "form-control" %>
        </div>
        <div class="form-group">
          <label>Prénom du parent :</label>
          <%= f.text_field :parent_firstname, :class => "form-control" %>
        </div>
        <div class="form-group">
          <label>Email du parent :</label>
          <%= f.text_field :parent_email, :class => "form-control" %>
        </div>
      </div>
      <%= render partial: "admin/shared/address", locals: {f: f} %>
    </div>
  </div>
<% end %>