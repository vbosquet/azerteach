<!-- Begin breadcrumb -->
<ol class="breadcrumb default square rsaquo sm">
	<li><a href="/admin"><i class="fa fa-home"></i></a></li>
	<li><a href="/admin/teachers">Professeurs</a></li>
	<li class="active">Modifier</li>
</ol>
<!-- End breadcrumb -->

<%= render :partial => 'form' %>

<h4 class="small-title" style="margin-top: 30px">RESERVATIONS ATTRIBUEES</h4>

<div class="the-box">
	<div class="table-responsive">
		<table class="table table-striped table-hover datatable" id="lessons-datatable">
			<thead class="the-box dark full">
				<tr>
          <th style="width:200px">Actions</th>
          <th style="width:50px">ID</th>
          <th>Début du cours</th>
          <th>Fin du cours</th>
          <th>Type de cours</th>
          <th>Elève</th>
          <th>Note de frais</th>
                  </tr>
			</thead>
			<tbody id="lessons_data">
        <% @teacher.lessons.distinct.each do |lesson| %>
          <tr id="lesson_<%= lesson.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_lesson_path(lesson) %>"><i class="fa fa-pencil"></i> Ouvrir la réservation</a>
            </td>
            <td><%= lesson.id %></td>
            <td><%= lesson.start_date.strftime("%d/%m/%Y %H:%M") if lesson.start_date.present? %></td>
            <td><%= lesson.end_date.strftime("%d/%m/%Y %H:%M") if lesson.end_date.present? %></td>
            <td><%= lesson.product.name if lesson.product.present? %></td>
            <td><%= lesson.students_name.join(', ') if lesson.students.present? %></td>
            <td><%= lesson.expense_export.present? && lesson.expense_export.sending_date.present? ? "Envoyée le #{lesson.expense_export.sending_date.strftime('%d/%m/%Y')}" : "Non encore envoyée" %></td>
          </tr>
        <% end %>
			</tbody>
		</table>
	</div><!-- /.table-responsive -->
</div><!-- /.the-box -->
<!-- End static table -->