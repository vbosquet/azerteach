<div class="the-box">
	<div class="table-responsive">
		<table class="table table-striped table-hover datatable" id="teachers-datatable">
			<thead class="the-box dark full">
				<tr>
          <th style="width:200px">Actions</th>
          <th style="width:50px">ID</th>
          <th style="width:200px">Pr√©nom</th>
          <th style="width:200px">Nom</th>
                  </tr>
			</thead>
			<tbody id="teachers_data">
        <% @teachers.each do |teacher| %>
          <tr id="teachers_<%= teacher.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_teacher_path(teacher) %>"><i class="fa fa-pencil"></i> Modifier</a>
              <a class="btn btn-danger delete-record" data-id="<%= teacher.id %>" data-type="teachers"><i class="fa fa-trash-o"></i> Supprimer</a>
            </td>
            <td><%= teacher.id %></td>
            <td><%= teacher.firstname %></td>
            <td><%= teacher.lastname %></td>
            
          </tr>
        <% end %>
			</tbody>
		</table>
	</div><!-- /.table-responsive -->
</div><!-- /.the-box -->
