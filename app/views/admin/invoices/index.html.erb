<!-- Begin page heading -->
<h1 class="page-heading">Factures</h1>
<!-- End page heading -->

<!-- Begin breadcrumb -->
<ol class="breadcrumb default square rsaquo sm">
	<li><a href="/admin"><i class="fa fa-home"></i></a></li>
	<li class="active">Factures</li>
</ol>
<!-- End breadcrumb -->

<a class="btn btn-info btn-perspective" href="<%= new_admin_invoice_path %>"><i class="fa fa-plus"></i> Nouvelle facture</a>

<!-- Begin static table -->
<h4 class="small-title" style="margin-top: 30px">FACTURES</h4>

<div class="the-box">
	<div class="table-responsive">
		<table class="table table-striped table-hover datatable" id="invoices-datatable">
			<thead class="the-box dark full">
				<tr>
          <th style="width:200px">Actions</th>
          <th style="width:200px">Numéro</th>
          <th style="width:200px">Montant HTVA</th>
          <th style="width:200px">TVA</th>
          <th style="width:200px">Montant TVAC</th>
          <th style="width:200px">Date d'envoi</th>
          <th style="width:200px">Elève</th>
          <th style="width:200px">Statut du payement</th>
                  </tr>
			</thead>
			<tbody id="invoices_data">
        <% @invoices.each do |invoice| %>
          <tr id="invoices_<%= invoice.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_invoice_path(invoice) %>"><i class="fa fa-pencil"></i> Modifier</a>
              <a class="btn btn-danger delete-record" data-id="<%= invoice.id %>" data-type="invoices"><i class="fa fa-trash-o"></i> Supprimer</a>
            </td>
            <td><%= invoice.numero %></td>
            <td><%= invoice.amount %></td>
            <td><%= invoice.vat %></td>
            <td><%= invoice.amount_with_vat %></td>
            <td><%= invoice.sending_date %></td>
            <td><%= invoice.student.name if invoice.student.present? %></td>
            <td><%= invoice.payment_status? ? "Payé" : "Impayé" %></td>
            
          </tr>
        <% end %>
			</tbody>
		</table>
	</div><!-- /.table-responsive -->
</div><!-- /.the-box -->
<!-- End static table -->