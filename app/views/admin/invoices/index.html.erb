<!-- Begin page heading -->
<h1 class="page-heading">Factures</h1>
<!-- End page heading -->

<!-- Begin breadcrumb -->
<ol class="breadcrumb default square rsaquo sm">
	<li><a href="/admin"><i class="fa fa-home"></i></a></li>
	<li class="active">Factures</li>
</ol>
<!-- End breadcrumb -->

<% if @billable_lessons.select {|l| l.invoice.nil?}.present? %>
  <a class="btn btn-info btn-perspective" href="<%= new_admin_invoice_path %>"><i class="fa fa-plus"></i> Nouvelle facture</a>
  <a class="btn btn-info btn-perspective" href="<%= admin_generate_invoices_path %>"><i class="fa fa-plus"></i> Facturer toutes les réservations</a>
<% end %>

<% if Invoice.all.where("sending_date IS NULL").present? %>
  <a class="btn btn-primary btn-perspective" href="<%= admin_send_invoices_path %>"><i class="fa fa-envelope-o"></i> Envoyer toutes les factures</a>
<% end %>

<!-- Begin static table -->
<h4 class="small-title" style="margin-top: 30px">FACTURES</h4>

<div class="the-box">
	<div class="table-responsive">
		<table class="table table-striped table-hover datatable" id="invoices-datatable">
			<thead class="the-box dark full">
				<tr>
          <th style="width:150px">Actions</th>
          <th>Numéro</th>
          <th>Montant Total</th>
          <th>Elève</th>
          <th>Date d'envoi</th>
          <th>Date du payement</th>
          <th>PDF</th>
                  </tr>
			</thead>
			<tbody id="invoices_data">
        <% @invoices.each do |invoice| %>
          <tr id="invoices_<%= invoice.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_invoice_path(invoice) %>"><i class="fa fa-pencil"></i></a>
              <% if invoice.sending_date.nil? %>
                <a class="btn btn-primary" href="<%=  admin_send_invoice_path(invoice) %>"><i class="fa fa-envelope-o"></i></a>
                <a class="btn btn-danger delete-record" data-id="<%= invoice.id %>" data-type="invoices"><i class="fa fa-trash-o"></i></a>
              <% end %>
            </td>
            <td><%= invoice.numero %></td>
            <td><%= invoice.amount %></td>
            <td><%= invoice.student.name if invoice.student.present? %></td>
            <td><%= invoice.sending_date.nil? ? "Non encore envoyée" : "Envoyée le #{invoice.sending_date.strftime('%d/%m/%Y')}" %></td>
            <td><%= invoice.payment_date.nil? ? "Non encore payée" : "Payée le #{invoice.sending_date.strftime('%d/%m/%Y')}" %></td>
            <td><%= link_to "Visualiser la facture", invoice.pdf.url, target: '_blank' %></td>
            
          </tr>
        <% end %>
			</tbody>
		</table>
	</div><!-- /.table-responsive -->
</div><!-- /.the-box -->
<!-- End static table -->