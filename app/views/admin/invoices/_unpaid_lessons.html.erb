<h4 class="small-title" style="margin-top: 30px">COURS IMPAYES</h4>

<div class="the-box">
  <div class="table-responsive">
    <table class="table table-striped table-hover datatable" id="unpaid-lessons-datatable">
      <thead class="the-box dark full">
        <tr>
          <th>Actions</th>
          <th>Code</th>
          <th>Date du cours</th>
          <th>Type de cours</th>
          <th>Professeur</th>
          <th>Elève</th>
          <th>Montant</th>
          <th>Facture</th>
                  </tr>
      </thead>
      <tbody id="unpaid-lessons_data">
        <% @unpaid_lessons.each do |unpaid_lesson| %>
          <tr id="unpaid-lessons_<%= unpaid_lesson.id %>">
            <td>
              <a class="btn btn-info" href="<%= edit_admin_lesson_path(unpaid_lesson) %>"><i class="fa fa-pencil"></i></a>
            </td>
            <td><%= unpaid_lesson.code %></td>
            <td><%= unpaid_lesson.invoice_date.strftime("%d/%m/%Y") if unpaid_lesson.invoice_date.present? %></td>
            <td><%= unpaid_lesson.item_sold %></td>
            <td><%= unpaid_lesson.teacher_name %></td>
            <td><%= unpaid_lesson.student.name if unpaid_lesson.student.present? %></td>
            <td><%= unpaid_lesson.full_price - unpaid_lesson.discount %></td>
            <td><%= unpaid_lesson.invoice.present? ? (unpaid_lesson.invoice.sending_date.present? ? "Envoyée le #{unpaid_lesson.invoice.sending_date.strftime("%d/%m/%Y")}" :  "Créée le #{unpaid_lesson.invoice.created_at.strftime("%d/%m/%Y")}") : "Non encore créée" %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
