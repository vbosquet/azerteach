<%= form_for([:admin, @invoice], :html => {:multipart => true, :class => "validatable_form", :'data-bv-message' => "This value is not valid", :'data-bv-feedbackicons-valid' => "glyphicon glyphicon-ok", :'data-bv-feedbackicons-invalid' => "glyphicon glyphicon-remove", :'data-bv-feedbackicons-validating' => "glyphicon glyphicon-refresh" }) do |f| %>
  <div class="row">
  	<div class="col-sm-6">
  		<div class="the-box">

        <div class="form-group">
          <label>Numéro de facture : </label>
          <%= f.text_field :numero, :class => "form-control", :required => 'required', :'data-bv-notempty-message' => "La numéro de facture obligatoire." %>
        </div>

        <div class="form-group">
          <label>Elève :</label>
          <%= f.select :student_id, Student.all.collect {|s| [s.name, s.id]}, {prompt: "Choisissez"}, {:class => "form-control select", :required => 'required', :'data-bv-notempty-message' => "Un élève est obligatoire.", id: 'student-select' } %>
        </div>

        <div class="form-group">
          <label>Réservation(s) :</label>
          <%= select_tag :lesson_ids, options_for_select(@lessons.collect {|l| ["#{l.product.name} - #{l.start_date.strftime("%d/%m/%Y")}", l.id]}), {:class => "form-control select", :required => 'required', :'data-bv-notempty-message' => "Une réservation est obligatoire.", :multiple => true, id: 'lessons-select' } %>
          <div class="checkbox">
            <label><%= check_box_tag 'all_lessons', 1, false, {id: "all-lessons-checkbox"} %>Toutes les réservations</label>
          </div>
        </div>

        <div class="form-group">
          <label>Montant HTVA : </label>
          <%= f.text_field :amount, :class => "form-control", :required => 'required', :'data-bv-notempty-message' => "Le montant HTVA est obligatoire.", id: 'amount-without-vat' %>
        </div>

        <div class="form-group">
          <label>TVA : </label>
          <%= f.select :vat, [["21%", 21], ["17%", 17], ["6%", 6]], {prompt: "Choisissez"}, {:class => "form-control", :required => 'required', :'data-bv-notempty-message' => "La TVA est obligatoire.", id: 'vat-select'} %>
        </div>

        <div class="form-group">
          <label>Montant TVAC : </label>
          <%= f.text_field :amount_with_vat, :class => "form-control", :required => 'required', :'data-bv-notempty-message' => "Le montant TVAC est obligatoire.", id: 'amount-with-vat' %>
        </div>
	  
			  <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Enregistrer</button>
  		</div><!-- /.the-box -->
    </div>
  </div>
<% end %>