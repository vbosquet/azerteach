<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group has-feedback lg left-feedback no-label">
    <%= f.text_field :email, autofocus: true, class: "form-control no-border input-lg rounded", placeholder: "Votre email" %>
    <span class="fa fa-user form-control-feedback"></span>
  </div>
  <div class="form-group has-feedback lg left-feedback no-label">
    <%= f.password_field :password, autocomplete: "off", class: "form-control no-border input-lg rounded", placeholder: "Votre mot de passe" %>
    <span class="fa fa-unlock-alt form-control-feedback"></span>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-warning btn-lg btn-perspective btn-block">CONNEXION</button>
  </div>
<% end %>

<%= render "devise/shared/links" %>
